.full-toc
  .full
    display block
    position fixed
    top 20px
    right 30px
    z-index 31
    width 30px
    height 30px
    padding 0
    background transparent
    border none
    border-radius 2px
    outline none
    overflow hidden
    cursor pointer
    .min ,.max
      transform translateX(50%)
      padding-top 7px
      display block
      width 200%
      height 30px
      margin-left -100%
      font-size 16px
      line-height 30px
      color #fff
      background #2A2935
      overflow hidden
    .min:before
      float left
      width 50%
      content "\e98b"
    .max:before
      float left
      width 50%
      content "\e98c"
  .post-toc-menu
    display block
    position fixed
    top 63px
    right 30px
    z-index 20
    width 30px
    height 30px
    padding 0
    background transparent
    border none
    border-radius 2px
    outline none
    overflow hidden
    cursor pointer
    &-icons
      display block
      padding-top 7px
      width 200%
      height 30px
      font-size 16px
      line-height 30px
      color #fff
      background #2A2935
      overflow hidden
      &:before
        float left
        width 50%
        content "\e9ba"
  .post-toc
    min-width 260px
    padding 10px 0
    position fixed
    top 106px
    left 100%
    z-index 20
    background rgba(250,250,250,1)
    border 1px solid #e5e8ec
    border-radius 10px
    display block
    overflow-y scroll
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    -o-user-select none
    user-select none
    transition transform .35s cubic-bezier(.77, 0, .175, 1)
    &.open
      transform translateX(-100%)
    .post-toc-title
      padding 0 0 6px 10px
      color #2C353D
      font-size 12px
      display block
      color rgb(116, 129, 141)
      letter-spacing 3px
    .post-toc-content
      ol
        margin 0
        padding 0 10px 0 10px
        line-height 2.0
        li
          font-size 13px
          color #7D8B99
          white-space nowrap
          text-overflow ellipsis
          display block
          overflow hidden
    a:hover
      color rgb(237, 111, 109)
  #rocket
    position fixed
    bottom 30px
    top auto
    right 20px
    font-size 40px
    z-index 21
    display none
    opacity 0
    transition opacity .8s,bottom .8s
    &:hover
      opacity 1
    &:hover::before
      color #449fdb
    &:before
      content "\e900"
      position absolute
      bottom 0px
      right -4px
      transition color .5s
    &.launch
      bottom 450px
      opacity 0
      &:before
        content "\e900"
        position absolute
        bottom 0px
        right -4px
        color #449fdb
      &:after
        content "\e9a9"
        position absolute
        right 9px
        bottom -16px
        font-size 21px
        color red